    <%= link_to "Modul-Auswahl im ModulManager-Format speichern", {:action => "get_file"}, {:class => "linkbuttonleft", :popup => true} %>
	
  <div id="bestaetigen">
    <%= link_to "Zurück", {:action => "index"}, :class => "linkbutton" %>
  </div>
  <div class="clear">&nbsp;</div>

</div>
